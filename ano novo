<script>
// Glitter Touch Effect
window.addEventListener("touchmove", (e) => {
    let x = e.touches[0].clientX;
    let y = e.touches[0].clientY;
    spawnGlitter(x, y);
});

window.addEventListener("mousemove", (e) => {
    if (e.buttons === 1) spawnGlitter(e.clientX, e.clientY);
});

function spawnGlitter(x, y) {
    const g = document.createElement("div");
    g.classList.add("glitter");
    g.style.left = x + "px";
    g.style.top = y + "px";
    document.body.appendChild(g);
    setTimeout(() => g.remove(), 800);
}

// Nostalgia Button Redirect + Hacker Animation
const nostalgiaBtn = document.getElementById('nostalgiaBtn');
const hackerScreen = document.getElementById('hackerScreen');
const mainContent = document.getElementById('mainContent');

nostalgiaBtn.onclick = () => {
    mainContent.style.display = 'none';
    hackerScreen.style.display = 'block';

    const text = [
        "ACESSANDO MEM√ìRIAS...", "CARREGANDO ARQUIVOS SECRETOS...", 
        "VERIFICANDO AMOR...", "AMOR DETECTADO ‚úî", "LIBERANDO ACESSO..."
    ];

    let i = 0;
    let interval = setInterval(() => {
        hackerScreen.innerHTML += text[i] + "<br>";
        i++;
        if (i >= text.length) {
            clearInterval(interval);
            setTimeout(() => {
                window.location.href = "https://wa.me/5582988763649";
            }, 1500);
        }
    }, 800);
};

// Declara√ß√£o Toggle
const declaracaoBtn = document.getElementById('declaracaoBtn');
const declaracaoTexto = document.getElementById('declaracaoTexto');

declaracaoBtn.onclick = () => {
    declaracaoTexto.style.display = (declaracaoTexto.style.display === 'none') ? 'block' : 'none';
};
</script>

